<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:id="@+id/menu_linearLayout" android:layout_width="fill_parent">
		<LinearLayout android:layout_height="50px"
			android:layout_alignParentBottom="true" android:id="@+id/menu_linearLayout2"
			android:layout_width="fill_parent">
			<Button android:text="╋" android:id="@+id/jiahao_button"
				android:layout_width="50px" android:textSize="20px"
				android:layout_height="150px"></Button>
			<EditText android:layout_width="wrap_content"
				android:layout_weight="1" android:layout_height="50px" android:id="@+id/txt_editText">
				<requestFocus></requestFocus>
			</EditText>
			<Button android:text="发送" android:textSize="20px" android:id="@+id/sendButton"
				android:layout_width="70px" android:layout_height="150px"></Button>
		</LinearLayout>
	</LinearLayout>
	<ScrollView android:layout_marginBottom="51px"
		android:layout_alignParentTop="true" android:id="@+id/list_scrollView"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/list_linearLayout"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent">

		</LinearLayout>
	</ScrollView>

</RelativeLayout>
